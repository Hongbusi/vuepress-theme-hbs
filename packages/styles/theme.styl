// 滚动条
::-webkit-scrollbar
  width 5px
  height 5px

::-webkit-scrollbar-thumb:vertical
  height 5px;
  background-color $accentColor

::-webkit-scrollbar-thumb:horizontal
  width 5px
  background-color $accentColor

// 侧边栏滚动条
.sidebar::-webkit-scrollbar
    width 2px
    height 2px

// vuepress-plugin-container 增加两种容器
.theorem
  margin 1rem 0
  padding .1rem 1.5rem
  border-radius 0.4rem
  background-color #f0f4f8
  .title
    font-weight bold

.custom-block
  &.right
    color transparentify($textColor, 0.4)
    font-size 0.9rem
    text-align right
